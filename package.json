{
  "name": "docker-ts-template",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.0",
    "express": "^4.18.1"
  },
  "scripts": {
    "dev": "ts-node-dev --poll src/index.ts",
    "build": "rimraf ./dist; tsc",
    "────────────────────────────": "─────────────────────────────────",
    "docker:build-local-prod": "docker build --target production -t sturmenta/docker-ts-template:latest .",
    "docker:run-local-prod": "docker run --env-file ./.env -dp 4000:4000 sturmenta/docker-ts-template:latest",
    "─────────────────────────────": "─────────────────────────────────",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:build-and-push-prod": "echo Image tag?; read _tag; docker build --target production --platform linux/amd64 -t sturmenta/docker-ts-template:$_tag .; docker push sturmenta/docker-ts-template:$_tag"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
